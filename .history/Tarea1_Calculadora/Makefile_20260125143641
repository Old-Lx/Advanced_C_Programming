# Variables #
SRC := ./src
# La convención de variables es mayúsculas además, hay que tener cuidado al comentar al final de una línea porque se puede agregar espacios vacíos#
BUILD := ./build
DEBUG := ./debug

main: %.o
	mkdir -p ${BUILD}/bin
	gcc ${BUILD}/%<.o -o ${BUILD}/bin/%@
%.o: ${SRC}/%.c
	mkdir -p ${BUILD}
	gcc -c ${SRC}/$< -o ${BUILD}/%@.o
	echo ${SRC}/$<
clean:
	rm -fr ${BUILD}